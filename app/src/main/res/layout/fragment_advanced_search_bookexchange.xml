<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginBottom="@dimen/margin">

    <View style="@style/dashLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_title_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:id="@+id/edit_search_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_title"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_subject_black_24dp" />
            <Spinner
                android:theme="@style/SpinnerStyle"
                android:id="@+id/select_search_book_course_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_subject_black_24dp" />
            <Spinner
                android:theme="@style/SpinnerStyle"
                android:id="@+id/select_search_book_course_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_course_title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:visibility="gone">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_subject_black_24dp" />
            <TextView
                android:id="@+id/text_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_attach_money_black_24dp" />

            <EditText
                android:theme="@style/EditTextStyle"
                android:id="@+id/edit_search_book_min_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_min_price"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_attach_money_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:id="@+id/edit_search_book_max_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_max_price"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_star_black_24dp" />

            <Spinner
                android:theme="@style/SpinnerStyle"
                android:id="@+id/select_search_book_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/dashLine"/>
</LinearLayout>