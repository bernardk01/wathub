<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_search_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_group_name"/>

    <EditText
        android:id="@+id/edit_search_group_where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_where"/>

    <EditText
        android:id="@+id/edit_search_group_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_when"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_search_group_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_start_time"/>

        <EditText
            android:id="@+id/edit_search_group_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_end_time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/select_search_course_subject"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
        </Spinner>

        <Spinner
            android:id="@+id/select_search_course_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_search_group_min_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_min_people"
            android:inputType="number"/>

        <EditText
            android:id="@+id/edit_search_group_max_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_max_people"
            android:inputType="number"/>

    </LinearLayout>

</LinearLayout>