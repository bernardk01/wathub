<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".hub.fragments.navigation.NavigationDrawerFragment"
    android:orientation="vertical"
    android:background="@color/teal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/no_avatar"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/teal"
        android:contentDescription="@string/content_avatar"/>
    <ListView
        android:id="@+id/drawer_list"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent" android:dividerHeight="0dp"
        android:background="@color/yellow_uw"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

