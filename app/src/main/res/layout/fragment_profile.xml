<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_img_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin">

            <ImageView
                android:id="@+id/profile_background_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/uw" />

            <ImageView
                android:id="@+id/profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:contentDescription="@string/info_no_photo_available"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                android:background="@drawable/border_image"
                android:layout_alignParentStart="true"
                android:scaleType="centerInside"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_firstName"
                android:hint="@string/profile_hint_firstname" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_lastName"
                android:hint="@string/profile_hint_lastname" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_today_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_birthday"
                android:inputType="none"
                android:hint="@string/profile_hint_birthday" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_call_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_phone"
                android:inputType="phone"
                android:hint="@string/profile_hint_phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_school_black_24dp" />
            <EditText
                android:theme="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_major"
                android:hint="@string/profile_hint_program" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_contact_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/icon"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_black_24dp" />
            <Button
                android:theme="@style/ButtonStyle"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/profile_btn_add_contact_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_btn_add_contact_link"/>
        </LinearLayout>

        <Button
            android:id="@+id/profile_btn_save"
            android:theme="@style/ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_btn_save"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
