<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

     <ImageView
        android:contentDescription="@string/profile_photo_content_description"
        android:layout_width="167dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
         android:scaleType="centerCrop"
        android:src="@drawable/bb8" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:hint="@string/profile_hint_firstname"
        android:editable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:hint="@string/profile_hint_lastname"
        android:editable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/birthDay"
        android:hint="@string/profile_hint_birthday"
        android:editable="false"
        android:inputType="date" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major"
        android:hint="@string/profile_hint_program"
        android:editable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumber"
        android:hint="@string/profile_hint_phone"
        android:editable="false"
        android:inputType="phone" />

</LinearLayout>