<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="webb8.wathub.hub.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profile_background_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/black"/>

        <ImageView
            android:id="@+id/profile_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/info_no_photo_available"
            android:src="@drawable/no_avatar"
            android:background="@drawable/border_image"/>

        <TextView
            android:id="@+id/profile_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_photo" />

        <TextView
            android:id="@+id/profile_user_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_user_name" />

        <TextView
            android:id="@+id/profile_user_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_user_birthday" />

        <LinearLayout
            android:id="@+id/profile_user_contact_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_user_major"
            android:orientation="vertical">
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/profile_user_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_info_container">
    </FrameLayout>
</RelativeLayout>
