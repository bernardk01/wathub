<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section_fab_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.design.widget.FloatingActionButton
        android:id="@+id/fab_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_white_24dp"/>

    <android.design.widget.FloatingActionButton
        android:id="@+id/fab_general_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_post"
        android:visibility="gone"/>

    <android.design.widget.FloatingActionButton
        android:id="@+id/fab_book_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_general_post"
        android:visibility="gone" />

    <android.design.widget.FloatingActionButton
        android:id="@+id/fab_group_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/fab_book_exchange"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fab_text_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_general_post"
        android:textSize="12sp"
        android:layout_toStartOf="@id/fab_general_post"
        android:layout_above="@id/fab_post"
        android:layout_alignBottom="@id/fab_general_post"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fab_text_book_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_book_exchange_posts"
        android:textSize="12sp"
        android:layout_toStartOf="@id/fab_book_exchange"
        android:layout_alignBottom="@id/fab_book_exchange"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fab_text_group_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_group_study_posts"
        android:textSize="12sp"
        android:layout_toStartOf="@id/fab_group_study"
        android:layout_above="@id/fab_post"
        android:layout_alignBottom="@id/fab_group_study"
        android:visibility="gone"/>
</RelativeLayout>