<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_search_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/select_search_course_subject"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
        </Spinner>

        <Spinner
            android:id="@+id/select_search_course_number"
            android:layout_width="150dp"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_search_min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_min_price"
            android:inputType="numberDecimal"/>

        <EditText
            android:id="@+id/edit_search_max_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_max_price"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/select_search_book_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

</LinearLayout>